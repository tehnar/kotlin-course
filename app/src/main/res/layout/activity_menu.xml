<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ru.spbau.mit.roguelike.MenuActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/black"
        android:fitsSystemWindows="true"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="112dp"
        tools:layout_editor_absoluteY="392dp">

        <TextView
            android:inputType="none"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:textColor="@android:color/white"
            android:textSize="30sp"
            android:textAlignment="center"
            android:text="Roguelike" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">
            <TextView
                android:layout_marginStart="20dp"
                android:inputType="none"
                android:layout_width="0dp"
                android:layout_weight="0.3"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textAlignment="textEnd"
                android:text="Who are you? :" />

            <EditText
                android:id="@+id/edit_player_name"
                android:inputType="textPersonName"
                android:layout_marginEnd="20dp"
                android:layout_width="0dp"
                android:layout_weight="0.5"
                android:layout_height="wrap_content"
                android:ems="10"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:textAlignment="textStart"
                android:text="Tehnar" />
        </LinearLayout>
        <Button
            android:id="@+id/button_new_game"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_black_bg"
            android:text="New Game"
            android:textColor="@android:color/white"
            android:visibility="visible" />

        <Button
            android:id="@+id/button_load_game"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/button_black_bg"
            android:text="Load Game"
            android:textColor="@android:color/white"
            android:visibility="visible" />

        <Button
            android:id="@+id/button_scoreboard"
            android:layout_width="fill_parent"
            android:layout_height="70dp"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/button_black_bg"
            android:text="Scoreboard"
            android:textColor="@android:color/white" />
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
